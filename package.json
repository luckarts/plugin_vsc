{
  "name": "code-assist-ai",
  "displayName": "Code Assistant AI",
  "description": "AI code assistant powered by Claude 3.7 Sonnet",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/code-assist-ai"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "contributes": {
    "commands": [
      {
        "command": "codeAssist.start",
        "title": "Start Code Assistant AI"
      },
      {
        "command": "codeAssist.indexCode",
        "title": "Index Workspace Code"
      },
      {
        "command": "codeAssist.configureApiKey",
        "title": "Configure Claude API Key"
      },
      {
        "command": "codeAssist.validateApiKey",
        "title": "Validate Claude API Key"
      },
      {
        "command": "codeAssist.revokeApiKey",
        "title": "Revoke Claude API Key"
      },
      {
        "command": "codeAssist.clearIndex",
        "title": "Clear Vector Index"
      },
      {
        "command": "codeAssist.indexStats",
        "title": "Show Index Statistics"
      },
      {
        "command": "codeAssist.indexCurrentFile",
        "title": "Index Current File"
      },
      {
        "command": "codeAssist.addMemory",
        "title": "Add Memory",
        "category": "Code Assistant"
      },
      {
        "command": "codeAssist.addSelectionToMemory",
        "title": "Add Selection to Memory",
        "category": "Code Assistant"
      },
      {
        "command": "codeAssist.searchMemories",
        "title": "Search Memories",
        "category": "Code Assistant"
      },
      {
        "command": "codeAssist.openMemoryPanel",
        "title": "Open Memory Panel",
        "category": "Code Assistant"
      },
      {
        "command": "codeAssist.compressMemories",
        "title": "Compress Memories",
        "category": "Code Assistant"
      },
      {
        "command": "codeAssist.optimizeMemoryStorage",
        "title": "Optimize Memory Storage",
        "category": "Code Assistant"
      },
      {
        "command": "codeAssist.memoryStats",
        "title": "Show Memory Statistics",
        "category": "Code Assistant"
      },
      {
        "command": "codeAssist.exportMemories",
        "title": "Export Memories",
        "category": "Code Assistant"
      },
      {
        "command": "codeAssist.importMemories",
        "title": "Import Memories",
        "category": "Code Assistant"
      },
      {
        "command": "codeAssist.createMemoryBackup",
        "title": "Create Memory Backup",
        "category": "Code Assistant"
      },
      {
        "command": "codeAssist.restoreMemoryBackup",
        "title": "Restore Memory Backup",
        "category": "Code Assistant"
      },
      {
        "command": "codeAssist.addPersonalMemory",
        "title": "Add Personal Memory",
        "category": "Code Assistant"
      },
      {
        "command": "codeAssist.addRepositoryMemory",
        "title": "Add Repository Memory",
        "category": "Code Assistant"
      },
      {
        "command": "codeAssist.addGuidelineMemory",
        "title": "Add Guideline Memory",
        "category": "Code Assistant"
      },
      {
        "command": "codeAssist.runMemoryDemo",
        "title": "Run Memory System Demo",
        "category": "Code Assistant"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeAssistAI",
          "title": "Code Assistant AI",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "codeAssistAI": [
        {
          "id": "codeAssistChat",
          "name": "Chat",
          "type": "webview"
        },
        {
          "id": "codeAssistMemories",
          "name": "Memories"
        }
      ]
    },
    "configuration": {
      "title": "Code Assistant AI",
      "properties": {
        "codeAssist.claudeApiKey": {
          "type": "string",
          "default": "",
          "description": "API key for Claude 3.7 Sonnet (deprecated - use secure storage instead)"
        },
        "codeAssist.useEnvironmentVariable": {
          "type": "boolean",
          "default": false,
          "description": "Use CLAUDE_API_KEY environment variable instead of stored key"
        },
        "codeAssist.environmentVariableName": {
          "type": "string",
          "default": "CLAUDE_API_KEY",
          "description": "Name of the environment variable containing the Claude API key"
        },
        "codeAssist.autoValidateApiKey": {
          "type": "boolean",
          "default": true,
          "description": "Automatically validate API key on startup"
        },
        "codeAssist.apiKeyValidationTimeout": {
          "type": "number",
          "default": 10000,
          "description": "Timeout in milliseconds for API key validation"
        },
        "codeAssist.maxContextLength": {
          "type": "number",
          "default": 10000,
          "description": "Maximum context length to send to Claude"
        },
        "codeAssist.theme": {
          "type": "string",
          "enum": [
            "light",
            "dark",
            "system"
          ],
          "default": "system",
          "description": "Theme for the chat interface"
        },
        "codeAssist.saveConversations": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save conversations"
        },
        "codeAssist.memories.maxSize": {
          "type": "number",
          "default": 1000000,
          "description": "Maximum total size of memories before compression (bytes)"
        },
        "codeAssist.memories.autoCompress": {
          "type": "boolean",
          "default": true,
          "description": "Automatically compress memories when threshold is reached"
        },
        "codeAssist.memories.compressionThreshold": {
          "type": "number",
          "default": 500000,
          "description": "Size threshold for automatic compression (bytes)"
        },
        "codeAssist.memories.maxMemoriesPerType": {
          "type": "number",
          "default": 100,
          "description": "Maximum number of memories per type"
        },
        "codeAssist.memories.backupInterval": {
          "type": "number",
          "default": 300000,
          "description": "Automatic backup interval in milliseconds"
        },
        "codeAssist.memories.enableAnalytics": {
          "type": "boolean",
          "default": true,
          "description": "Enable memory usage analytics"
        },
        "codeAssist.memories.retentionDays": {
          "type": "number",
          "default": 365,
          "description": "Number of days to retain memories (0 = forever)"
        }
      }
    }
  },
  "devDependencies": {
    "@types/node": "^22.15.21",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "guid-typescript": "^1.0.9"
  }
}
