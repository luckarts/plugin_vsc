{
  "name": "memory-v2",
  "version": "2.0.0",
  "description": "Advanced memory system with OpenMemory MCP integration for context-aware AI clients",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "memory-v2": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && npm run build:assets",
    "build:assets": "cp -r src/assets dist/ 2>/dev/null || true",
    "build:watch": "tsc --watch",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "start:monitor": "node dist/server.js --monitor",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:performance": "jest --config jest.performance.config.js",
    "test:embeddings": "node scripts/test-embeddings.js",
    "test:vector-search": "node scripts/test-vector-search.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "setup": "npm run setup:dirs && npm run setup:config && npm run setup:embeddings",
    "setup:dirs": "mkdir -p data/memories data/vectors data/backups logs",
    "setup:config": "cp config/default.json.example config/default.json",
    "setup:embeddings": "python scripts/download-embeddings.py",
    "setup:vectordb": "node scripts/setup-vectordb.js",
    "setup:storage": "node scripts/setup-storage.js",
    "check:deps": "node scripts/check-dependencies.js",
    "v1:analyze": "node scripts/v1-analyze.js",
    "v1:backup": "node scripts/v1-backup.js",
    "v1:export": "node scripts/v1-export.js",
    "v1:validate": "node scripts/v1-validate.js",
    "v1:restore": "node scripts/v1-restore.js",
    "v1:import": "node scripts/v1-import.js",
    "v2:import": "node scripts/v2-import.js",
    "v2:export": "node scripts/v2-export.js",
    "v2:validate": "node scripts/v2-validate.js",
    "v2:validate-import": "node scripts/v2-validate-import.js",
    "v2:generate-embeddings": "node scripts/v2-generate-embeddings.js",
    "v2:fix-embeddings": "node scripts/v2-fix-embeddings.js",
    "v2:optimize-indexes": "node scripts/v2-optimize-indexes.js",
    "v2:clear-cache": "node scripts/v2-clear-cache.js",
    "v2:recompress": "node scripts/v2-recompress.js",
    "v2:backup": "node scripts/v2-backup.js",
    "migrate:transform": "node scripts/migrate-transform.js",
    "migrate:compare": "node scripts/migrate-compare.js",
    "migrate:recover": "node scripts/migrate-recover.js",
    "benchmark:search": "node scripts/benchmark-search.js",
    "logs:watch": "tail -f logs/memory-v2.log | npx pino-pretty",
    "docs:generate": "typedoc src --out docs/api",
    "docs:serve": "http-server docs -p 8080",
    "release": "npm run build && npm run test && npm version patch && npm publish"
  },
  "keywords": [
    "memory",
    "mcp",
    "ai",
    "context",
    "embeddings",
    "vector-search",
    "semantic-search",
    "vscode",
    "cursor",
    "claude"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/memory-v2.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/memory-v2/issues"
  },
  "homepage": "https://github.com/your-username/memory-v2#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.22.4",
    "uuid": "^9.0.1",
    "lodash": "^4.17.21",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "rate-limiter-flexible": "^4.0.1",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/express": "^4.17.20",
    "@types/cors": "^2.8.15",
    "@types/compression": "^1.7.4",
    "@types/uuid": "^9.0.6",
    "@types/lodash": "^4.14.200",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/bcryptjs": "^2.4.5",
    "@types/node-cron": "^3.0.9",
    "@types/mime-types": "^2.1.3",
    "@types/archiver": "^6.0.2",
    "@types/jest": "^29.5.6",
    "@types/supertest": "^2.0.15",
    "typescript": "^5.2.2",
    "tsx": "^3.14.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.52.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "typedoc": "^0.25.3",
    "http-server": "^14.1.1",
    "pino-pretty": "^10.2.3",
    "nodemon": "^3.0.1"
  },
  "peerDependencies": {
    "python": ">=3.8.0"
  },
  "optionalDependencies": {
    "qdrant-js": "^1.7.0",
    "faiss-node": "^0.5.1",
    "tensorflow": "^4.10.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/types/**/*",
      "!src/**/*.test.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
    "testTimeout": 30000
  },
  "eslintConfig": {
    "extends": [
      "@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/explicit-function-return-type": "warn"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "files": [
    "dist/**/*",
    "config/**/*",
    "scripts/**/*",
    "README.md",
    "LICENSE"
  ]
}
