# Memory V2 Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
HOST=localhost

# =============================================================================
# SECURITY
# =============================================================================
# Generate a secure secret key for JWT tokens
SECRET_KEY=your-very-secure-secret-key-change-this-in-production
AUTH_ENABLED=true

# =============================================================================
# VECTOR DATABASE
# =============================================================================
# Chroma Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_SSL=false
CHROMA_DATABASE=memory_v2

# Qdrant Configuration (alternative)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_SSL=false
QDRANT_API_KEY=

# Vector Store Provider (chroma|qdrant)
VECTOR_STORE_PROVIDER=chroma

# =============================================================================
# EMBEDDING MODELS
# =============================================================================
# Local embedding model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_PROVIDER=local
EMBEDDING_DEVICE=cpu

# OpenAI Embeddings (optional)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Hugging Face (optional)
HUGGINGFACE_TOKEN=your-huggingface-token-here
HUGGINGFACE_MODEL=sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# STORAGE
# =============================================================================
STORAGE_DIR=./data
MEMORIES_DIR=./data/memories
VECTORS_DIR=./data/vectors
BACKUP_DIR=./data/backups
MODELS_DIR=./models

# =============================================================================
# PERFORMANCE
# =============================================================================
# Memory limits
MAX_MEMORY_SIZE=1000000
MAX_MEMORIES_PER_TYPE=10000
MAX_CONCURRENT_OPERATIONS=10

# Caching
CACHE_ENABLED=true
CACHE_SIZE=1000
CACHE_TTL=300000

# Batch processing
BATCH_SIZE=100
EMBEDDING_BATCH_SIZE=32

# =============================================================================
# COMPRESSION
# =============================================================================
COMPRESSION_ENABLED=true
COMPRESSION_THRESHOLD=500000
AUTO_COMPRESS=true
COMPRESSION_SCHEDULE="0 2 * * *"

# =============================================================================
# BACKUP
# =============================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=300000
BACKUP_RETENTION=30

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=./logs/memory-v2.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Console logging
LOG_CONSOLE=true
LOG_COLORIZE=true

# =============================================================================
# SEARCH
# =============================================================================
SEARCH_DEFAULT_LIMIT=10
SEARCH_MAX_LIMIT=100
SEARCH_DEFAULT_THRESHOLD=0.7
FUZZY_SEARCH_ENABLED=true
FULL_TEXT_SEARCH_ENABLED=true

# =============================================================================
# FEATURES
# =============================================================================
# Web Dashboard
WEB_DASHBOARD_ENABLED=false
WEB_DASHBOARD_PORT=3001

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/docs

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Metrics
METRICS_ENABLED=true
METRICS_PATH=/metrics
PROMETHEUS_ENABLED=false

# =============================================================================
# DEVELOPMENT
# =============================================================================
DEBUG_MODE=false
HOT_RELOAD=true
MOCK_DATA=false
TEST_MODE=false
PROFILING=false

# =============================================================================
# EXPERIMENTAL FEATURES
# =============================================================================
ADVANCED_COMPRESSION=false
MULTIMODAL_EMBEDDINGS=false
FEDERATED_SEARCH=false
AI_SUMMARIZATION=false

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Claude API (for AI features)
CLAUDE_API_KEY=your-claude-api-key-here

# Anthropic API
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# =============================================================================
# MONITORING
# =============================================================================
# Application monitoring
MONITORING_ENABLED=true
METRICS_INTERVAL=60000
HEALTH_CHECK_INTERVAL=30000

# Error tracking (optional)
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=development

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000

# =============================================================================
# CORS
# =============================================================================
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:*,vscode-webview://*,cursor://*

# =============================================================================
# SSL/TLS (for production)
# =============================================================================
SSL_ENABLED=false
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem

# =============================================================================
# DATABASE (if using SQL for metadata)
# =============================================================================
DATABASE_URL=sqlite:./data/metadata.db
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30000

# =============================================================================
# REDIS (for caching and sessions)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# CLOUD STORAGE (optional)
# =============================================================================
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=memory-v2-backups

# Google Cloud Storage
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_KEYFILE=./gcp-key.json
GCS_BUCKET=memory-v2-backups

# =============================================================================
# NOTIFICATIONS (optional)
# =============================================================================
# Email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Slack notifications
SLACK_WEBHOOK_URL=your-slack-webhook-url

# =============================================================================
# ANALYTICS (optional)
# =============================================================================
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# =============================================================================
# CUSTOM EXTENSIONS
# =============================================================================
EXTENSIONS_DIR=./extensions
EXTENSIONS_ENABLED=true
